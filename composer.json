{
    "license": "MIT",
    "name": "gocanto/flashed",
    "homepage": "https://github.com/gocanto/flashed",
    "type": "laravel-bundle",
    "description": "A tiny component to flash messages into Laravel session object.",
    "keywords": ["flash", "messages", "laravel", "session", "object"],
    "minimum-stability": "dev",

    "support": {
        "source": "https://github.com/gocanto/flashed",
        "issues": "https://github.com/gocanto/flashed/issues"
    },

    "require": {
        "php": "~7.0|~7.1",
        "illuminate/support": "5.4.*",
        "illuminate/container": "5.4.*"
    },

    "require-dev": {
        "phpunit/phpunit": "~5.7",
        "orchestra/testbench": "3.*",
        "mockery/mockery": "0.9.*"
    },

    "autoload": {
        "psr-4": {
            "Gocanto\\Flashed\\": "src/"
        }
    },

    "autoload-dev": {
        "psr-4": {
            "Gocanto\\Flashed\\Tests\\": "tests"
        },
        "classmap": [
            "tests/TestCase.php"
        ]
    },

    "scripts": {
        "test": "./vendor/bin/phpunit"
    }
}
